/***************************************/

.site-listing
    padding                             20px 0

.sl-sortbar
    display                             block
    text-align                          center

.sls-itm
    display                             inline-block
    margin-bottom                       3px

.sl-reference
    position                            relative
    margin-top                          20px
    box-shadow                          0 2px 10px 2px rgba($color1, 0.1)
    margin-left                         -10px
    margin-right                        -10px

.sl-taxonomy
    position                            absolute
    top                                 0
    left                                0
    z-index                             1
    padding                             10px
    width                               100%

// .sl-tags

// .sl-list

.sl-itm
    display                             inline-block
    margin                              0 3px 5px 0

.sl-lnk
    display                             block
    padding                             0 5px
    background-color                    $color9
    border                              1px solid rgba($color7, 0.3)
    border-radius                       3px
    font-size                           1.2rem
    color                               $color7

.sl-foreground
    display                             block
    width                               100%
    height                              160px
    background-color                    $color8

.slf-lnk
    position                            relative
    width                               100%
    height                              @width
    display                             block
    text-align                          center
    overflow                            hidden

.slf-img
    translate-middle()

.sl-title
    font-size                           1.8rem
    padding                             5px 10px 0 10px
    font-b()

.slt-lnk
    display                             block
    color                               $color5

.sl-content
    padding                             5px 10px 10px 10px

.slc-date
    display                             block
    margin-top                          -5px
    margin-bottom                       10px
    font-size                           1.3rem
    color                               $color7

.slc-excerpt
    display                             inline
    font-style                          italic

.slc-lnk
    display                             inline-block
    color                               $color3




/* Mediaqueries Tablet ( >= 640px) */
@media all and ( min-width: $smallScreenContentMaxWidth )

    .sl-reference
        margin-left                     0
        margin-right                    0



