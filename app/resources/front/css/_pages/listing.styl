/***************************************/

.site-listing
    padding                             20px 0

.sl-sortbar
    display                             block
    text-align                          center
    margin-bottom                       20px

    .sls-btn
        border-radius                   unset
        padding                         6px 15px

.sls-itm
    display                             inline-block
    margin-bottom                       3px

.sl-reference-wrapper
    transition3()

    &.hidden
        display                         none

.sl-reference
    position                            relative
    margin-top                          20px
    box-shadow                          0 2px 10px 2px rgba($color1, 0.1)
    margin-left                         -10px
    margin-right                        -10px
    transition3()

    &:hover
        transform                       translateY(-2px)
        box-shadow                      0 6px 10px 6px rgba($color1, 0.1)

        .slf-img
            transform                   translate(-50%, -50%) scale(1.2) rotate(-5deg)

.sl-taxonomy
    position                            absolute
    top                                 0
    left                                0
    z-index                             1
    padding                             10px
    width                               100%

// .sl-tags

// .sl-list

.sl-itm
    display                             inline-block
    margin                              0 3px 5px 0

.sl-lnk
    display                             block
    padding                             0 5px
    background-color                    $color2
    border                              1px solid rgba($color7, 0.3)
    border-radius                       3px
    font-size                           1.2rem
    color                               $color7
    transition3()

    &:hover
        background-color                $color3
        color                           $color2
        border                          1px solid $color3


.sl-foreground
    display                             block
    width                               100%
    height                              160px
    background-color                    $color8

.slf-lnk
    position                            relative
    width                               100%
    height                              @width
    display                             block
    text-align                          center
    overflow                            hidden

.slf-img
    translate-middle()
    width                               100%
    transition3()

.sl-title
    font-size                           1.8rem
    padding                             5px 10px 0 10px
    font-b()

.slt-lnk
    display                             block
    color                               $color5
    ellipsis-text()

.sl-content
    padding                             5px 10px 10px 10px

.slc-date
    display                             block
    margin-top                          -5px
    margin-bottom                       10px
    font-size                           1.3rem
    color                               $color7

.slc-excerpt
    display                             inline
    font-style                          italic

.slc-lnk
    display                             inline-block
    color                               $color3




/* Mediaqueries Tablet ( >= 640px) */
@media all and ( min-width: $smallScreenContentMaxWidth )

    .sl-reference
        margin-left                     0
        margin-right                    0



