/***************************************/

.page-home
    .article
        padding                         50px 0 0 0

        h3
            text-align                  center
            line-height                 1.2
            margin-bottom               20px

        p
            font-size                   1.6rem
            color                       $color7
            text-align                  center
            margin-top                  20px

    .sc-body
        padding-bottom                  30px

    .site-panel
        background-color:               $color8

    .mod-panel-global-content
        padding-bottom                  30px

        &.icon-marker
            box-shadow                  0 2px 10px 2px rgba($color1, 0.1)

            &:before
                display                 block
                width                   45px
                height                  45px
                background-color        $color3
                border-radius           50%
                padding                 20px
                text-align              center
                transform               scale(0.45)
                position                absolute
                top                     -40px
                left                    10px

    .mod-panel-home-services
        padding-bottom                  30px

        .mod-panel-wrapper-block
            text-decoration             none

            &:nth-child(1)
                .mod-panel-block
                    border-top          5px solid $color12

            &:nth-child(2)
                .mod-panel-block
                    border-top          5px solid $color14

            &:nth-child(3)
                .mod-panel-block
                    border-top          5px solid $color13

        .mod-panel-block
            background-color            $color2
            margin-bottom               20px

        .mod-panel-background
            position                    relative
            overflow                    hidden

            &:after
                content                 ""
                position                absolute
                top                     0
                left                    0
                width                   100%
                height                  @width
                background-color        $color5
                opacity                 0.5
                transition4(transform)

        .mod-panel-img
            transition3()

        .mod-panel-content
            width                       90%
            z-index                     1
            transition4(transform)
            translate-middle()

            p
                color                   $color2
                font-size               1.7rem

        a.mod-panel-wrapper-block
            .mod-panel-block
                transition3()

                &:hover
                    transform           translateY(-2px)
                    box-shadow          0 2px 10px 2px rgba($color1, 0.1)

                    .mod-panel-img
                        transform       scale(1.2) rotate(-5deg)

                    .mod-panel-background
                        &:after
                            transform   scale(0.9)

                    .mod-panel-content
                        transform       translate(-50%, -50%) scale(0.9)

            &:nth-child(1)
                .mod-panel-block
                    &:hover
                        .mod-panel-title-2
                            color       $color12

            &:nth-child(2)
                .mod-panel-block
                    &:hover
                        .mod-panel-title-2
                            color       $color13

            &:nth-child(3)
                .mod-panel-block
                    &:hover
                        .mod-panel-title-2
                            color       $color14

        .mod-panel-img
            display                     block
            width                       100%

        .mod-panel-title-2
            text-transform:             uppercase
            color                       $color6
            text-align                  center
            padding                     10px 0
            font-size                   2rem
            transition4(color)
            font-l()

    .mod-panel-home-expertise
        background-color                $color9
        padding-top                     60px
        padding-bottom                  30px

        a
            position                    relative
            display                     inline-block
            padding                     20px
            transform                   scale(0.9)
            border                      1px solid transparent
            width                       140px
            height                      @width
            transition3()

            &:after
                content                  attr(title)
                position                 absolute
                bottom                   -36px
                left                     0
                width                    calc(100% - 2px)
                text-align               center
                font-size                1.5rem
                color                    $color2
                background-color         $color5
                border-left              1px solid rgba($color7, 0.5)
                border-bottom            1px solid rgba($color7, 0.5)
                border-right             1px solid rgba($color7, 0.5)
                padding                  5px 0
                opacity                  0
                transition3()

            &:hover
                transform               translateY(-20px) scale(1)
                background-color        rgba($color8, 0.4)
                border-color            rgba($color7, 0.5)
                box-shadow              0 20px 20px 10px rgba($color1, 0.1)

                &:after
                    opacity             1

    .mod-panel-home-social-networks
        position                        relative
        height                          260px
        overflow                        hidden

        .mod-panel-hero-background
            position                    relative
            height                      100%
            overflow                    hidden

            &:after
                content                 ""
                position                absolute
                width                   100%
                height                  @width
                top                     0
                left                    0
                background-repeat       repeat
                background-position     top left
                z-index                 0


        .mod-panel-hero-picture
            display                     block
            width                       100%
            height                      100%

            &:after
                content                 ""
                position                absolute
                background-color        rgba($color1, 0.7);
                width                   100%
                height                  @width

        .mod-panel-hero-img
            display                     block
            width                       100%
            min-height                  400px
            translate-middle()

        .inner
            width                       90%
            max-width                   780px
            z-index                     1
            translate-middle()

        .mod-panel-title-1
            color                       $color2

        .lnks
            text-align                  center

            a
                position                relative
                display                 inline-block
                width                   70px
                height                  70px
                margin                  0 8px

                &:before
                    content             ""
                    position            absolute
                    top                 0
                    left                0
                    width               100%
                    height              100%
                    background-color    $color2
                    border-radius       100%
                    transform           scale(0.9)
                    transition4(transform)

                &:after
                    content             ""
                    position            absolute
                    top                 0
                    left                0
                    width               100%
                    height              100%
                    background-color    rgba($color1, 0.2)
                    border-radius       100%
                    transform           scale(1)
                    opacity             0
                    transition3()

                &:hover
                    &:before
                        transform       scale(1.1)

                    &:after
                        transform       scale(0)
                        opacity         1

            img
                position                relative

    .mod-panel-home-gmap
        position                        relative
        padding                         40px 0
        margin-bottom                   20px

        .mod-panel-gmap
            position                    absolute
            top                         0
            left                        0
            width                       100%
            height                      100%
            background-color            $color7

        .mod-panel-gmap-lnk
            display                     block
            position                    relative
            overflow                    hidden
            width                       100%
            height                      @width

            picture
                display                 block
                width                   100%
                height                  @width

        .mod-panel-gmap-img
            width                       100%
            transition3()
            translate-middle()

        .mod-panel-global-content
            position                    relative
            width                       80%
            max-width                   370px
            background-color            $color2
            padding                     20px
            margin                      0 auto
            transition3()
            font-l()

            .city
                font-size               1.8rem
                color                   $color6
                line-height             1.5
                margin-bottom           10px

                &:after
                    content             ""
                    display             block
                    position            relative
                    height              1px
                    width               40%
                    background-color    $color7
                    margin-top          7px

            .address
                a
                    color               $color7
                    margin-bottom       10px

            .phone
                color                   $color3

    .mod-panel-home-contact
        padding-top                     40px

        .site-contact-title
            font-size                   2.4rem
            text-transform              uppercase
            color                       $color5
            text-align                  center
            line-height                 1.2
            margin-bottom               20px
            font-b()

        .boltform
            padding                     10px

            .boltforms-label
                display                 none

            [class^="btn-"]
            [class*=" btn-"]
            a[class^="btn-"]
            a[class*=" btn-"]
            button[type="submit"]
                width                   100%

/* Mediaqueries Tablet ( >= 640px) */
@media all and ( min-width: $smallScreenContentMaxWidth )

    .page-home
        .sc-body
            padding-bottom              40px

        .mod-panel-home-services
            padding-bottom              50px

            .mod-panel-title-2
                font-size               1.3rem

            .mod-panel-content
                p
                    font-size           1.4rem

        .mod-panel-home-social-networks
            .lnks
                margin-top              30px

                a
                    margin              0 20px


/* Mediaqueries Desktop ( >= 960px) */
@media all and ( min-width: $mediumScreenContentMaxWidth )

    .page-home
        .article
            padding                     100px 0 60px 0

            p
                font-size               2.1rem

        .mod-panel-global-content
            padding-bottom              40px

        .mod-panel-global-content
            &.icon-marker
                &:before
                    transform           scale(0.75)
                    left                30px

        .mod-panel-home-services
            .mod-panel-title-2
                font-size               2.1rem

            .mod-panel-content
                transform               translate(-50%, -50%) scale(0.8)
                p
                    font-size           1.9rem

        .mod-panel-home-social-networks
            margin-bottom               -60px

        .site-contact
            display                     table
            width                       100%

            .mod-panel
                position                relative
                display                 table-cell
                width                   50%

            .mod-panel-global-content
                translate-middle()

            .mod-panel-home-contact
                padding                 30px

        .mod-panel-home-gmap
            .mod-panel-gmap
                height                  100%

            .mod-panel-global-content
                padding                 40px

                .city
                    font-size           2.3rem

                .address
                .phone
                    font-size           1.6rem


            &:hover
                .mod-panel-gmap-img
                    transform               translate(-50%, -50%) scale(1.05)

                .mod-panel-global-content
                    transform               translate(-50%, -50%) scale(0.95)
                    opacity                 0.9


@media screen and (min-width:0\0)
    .page-home
        .article
            .mod-panel-home-gmap
                .mod-panel-gmap
                    height                  611px


/* Mediaqueries Large ( >= 1400px) */
@media all and ( min-width: $largeScreenContentMaxWidth )

    .page-home
        .article
            padding                     125px 0 75px 0

            h3
                font-size               4rem
                margin-bottom           30px


            p
                margin-top              70px

        .mod-panel-global-content
            padding-bottom              70px
