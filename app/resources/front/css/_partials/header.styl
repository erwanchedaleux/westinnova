/***************************************/

.site-header
    height                              $headerHeight
    background-color                    $color2
    color                               $color5
    padding                             10px 0
    clearfix()

.sticky-nav
    .site-header
        position                        fixed
        z-index                         3
        top                             0
        left                            0
        width                           100%
        height                          60px
        padding                         13px 0
        animation-name                  animateHeader
        animation-duration              750ms
        box-shadow                      0 2px 10px 2px rgba($color1, 0.1)

    .sh-img
        width                           170px
        height                          35px

.sh-lnk
    float                               left

.sh-logo
    display                             inline-block

.sh-img
    vertical-align                      middle
    width                               132px
    height                              30px


@keyframes animateHeader
    0%
        transform                       translateY(-60px)

    100%
        transform                       translateY(0px)


/* Mediaqueries Tablet ( >= 640px) */
@media all and ( min-width: $smallScreenContentMaxWidth )

    .site-header
        height                          $headerHeightTablet
        padding                         15px 0

    .sh-img
        width                           198px
        height                          45px


/* Mediaqueries Desktop ( >= 960px) */
@media all and ( min-width: $mediumScreenContentMaxWidth )

    .site-header
        height                          $headerHeightDesktop

        .inner
            clearfix()

    .sh-lnk
        display                         block

    .sh-img
        width                           219px
        height                          50px


/* Mediaqueries Large ( >= 1400px) */
@media all and ( min-width: $largeScreenContentMaxWidth )

    .site-header
        height                          $headerHeightLarge
