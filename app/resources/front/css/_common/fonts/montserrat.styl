/* Montserrat
   Light (300)
   Light Italic (300)
   Regular (400)
   Regular Italic (400)
   Extra-bold (800)
   Extra-bold Italic (800)
------------------------------------------------------------------------*/
@font-face {
    font-family: 'montserrat';
    font-display: swap;
    src: url( $fontsUrl + 'montserrat-light-webfont.woff' ) format( 'woff' ),
         url( $fontsUrl + 'montserrat-light-webfont.woff2' ) format( 'woff2' ),
         url( $fontsUrl + 'montserrat-light-webfont.ttf' ) format( 'truetype' );
    font-style: normal;
    font-weight: 400;
}
@font-face {
    font-family: 'montserrat';
    font-display: swap;
    src: url( $fontsUrl + 'montserrat-light-italic-webfont.woff' ) format( 'woff' ),
         url( $fontsUrl + 'montserrat-light-italic-webfont.woff2' ) format( 'woff2' ),
         url( $fontsUrl + 'montserrat-light-italic-webfont.ttf' ) format( 'truetype' );
    font-style: italic;
    font-weight: 400;
}

