hide-text()
    color:                              transparent;
    font:                               0/0px;
    text-shadow:                        none;

placeholder()
    &::-moz-placeholder
        opacity                         1
        {block}

    &::-webkit-input-placeholder
        {block}

    &:-ms-input-placeholder
        {block}


clearfix()
    &:before
    &:after
        content                         ""
        display                         table

    &:after
        clear                           both

ellipsis-text( $width = 100% )
    display                             block
    text-overflow                       ellipsis
    white-space                         nowrap
    overflow                            hidden
    width                               $width

translate-middle()
    position                            absolute
    top                                 50%
    left                                50%
    transform                           translate(-50%, -50%)


transition1()
    transition                          all 0.2s cubic-bezier(.20,1,.20,1)

transition2()
    transition                          all 0.25s ease

transition3()
    transition                          all 0.5s ease

transition4( $prop )
    transition                          $prop 0.5s ease

black-transparent-gradient()
    background                          -moz-linear-gradient(top, rgba( $color1 ,1 ) 0%, rgba( $color1, 0 ) 100%); /* FF3.6-15 */
    background                          -webkit-linear-gradient(top, rgba( $color1, 1 ) 0%, rgba( $color1, 0 ) 100%); /* Chrome10-25,Safari5.1-6 */
    background                          linear-gradient(to bottom, rgba( $color1, 1 ) 0%, rgba( $color1, 0 ) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
