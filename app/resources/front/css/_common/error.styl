/***************************************/

html
body
#main
    width                               100%
    height                              100%
    min-width                           320px

#main
    display                             table
    width                               100%
    overflow                            auto
    font-size                           1.4rem
    background-color                    $color3
    font-1()

.inner
    max-width                           $innerWidth
    margin                              0 auto
    padding                             0 10px

.site-error
    padding                             20px 0
    display                             table-cell
    vertical-align                      middle

    a
        color                           $color2

.sc-errors-logo
    text-align                          center
    margin-bottom                       20px

.sce-img
    width                               300px
    height                              68px

.sc-errors-title-1
    color                               $color2
    text-align                          center
    text-transform                      uppercase
    margin-bottom                       10px
    font-size                           1.6rem
    font-b()

.sc-errors-teaser
    color                               $color2
    text-align                          center
    line-height                         1.2
    margin-bottom                       30px

.sc-errors-body
    color                               $color2
    text-align                          center
    line-height                         1.2

.ob-lnk
    display                             block
    margin-bottom                       20px

    span
        display                         block
        text-transform                  uppercase
        font-size                       1.6rem
        margin-top                      5px


/* Mediaqueries Tablet ( >= 640px) */
@media all and ( min-width: $smallScreenContentMaxWidth )

    .ob-list
        margin                          0 -10px
        font-size                       0
        text-align                      center

    .ob-itm
        display                         inline-block
        vertical-align                  top
        padding                         0 10px
        font-size                       1.4rem
        text-align                      center
        width                           33.333%


/* Mediaqueries Desktop ( >= 960px) */
@media all and ( min-width: $mediumScreenContentMaxWidth )

    .sc-errors-title-1
        font-size                       2.2rem
        margin-bottom                   30px

    .sc-errors-teaser
        font-size                       1.8rem
        margin-bottom                   50px

    .sc-errors-body
        font-size                       1.6rem

    .ob-itm
        width                           20%


/* Mediaqueries Large ( >= 1400px) */
@media all and ( min-width: $largeScreenContentMaxWidth )

    .inner
        max-width                       $largeScreenContentMaxWidth

    .sc-errors-title-1
        font-size                       2.8rem

    .sc-errors-teaser
        font-size                       2.2rem

    .sc-errors-body
        font-size                       1.8rem
