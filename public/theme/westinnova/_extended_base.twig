{% extends '_base.twig' %}

{% block global_content %}
    <div id="main" class="{{ (record is defined and record.slug is not empty ? 'page-' ~ record.slug : '') }}">
        {%- block preloader %}
            {% include 'partials/_preloader.twig' %}
        {% endblock preloader %}
        <div class="site-wrapper" itemscope itemtype="http://schema.org/LocalBusiness">
            {% block header %}
                {% include 'partials/_header.twig' %}
            {% endblock header %}
            {% block content '' %}
        </div>
        {%- block footer -%}
            {% include 'partials/_footer.twig' %}
        {% endblock footer %}
        {%- block cookies %}
            {% include 'partials/_cookies.twig' %}
        {% endblock cookies %}
    </div>

{% endblock global_content %}
