{% extends '_extended_base.twig' %}

{% block content %}

    {% if record is defined %}
        {% if record.image != "" %}
            {% include 'partials/_hero.twig' with {
                'img': record.image,
                'baseline': record.image_hero_baseline,
                'arrow': record.image_hero_arrow
            } %}
        {% endif %}
        <div class="site-content article">
            <div class="inner">
                <div class="sc-teaser">
                    {{ record.teaser }}
                </div>
                <div class="sc-form">
                    {{ boltforms('contact') }}
                </div>
                <div class="sc-body">
                    {{ record.body }}
                </div>
            </div>
        </div>
    {% endif %}

{% endblock content %}
