    <div class="inner">
        <a href="{{ url('homepage') }}" class="sh-lnk">
            <div class="sh-logo">
                <img srcset="{{ asset('assets/media/img/' ~ site_logo ~ '-132.png', 'theme', true, version) }} 132w,
                             {{ asset('assets/media/img/' ~ site_logo ~ '-198.png', 'theme', true, version) }} 198w,
                             {{ asset('assets/media/img/' ~ site_logo ~ '-219.png', 'theme', true, version) }} 219w,
                             {{ asset('assets/media/img/' ~ site_logo ~ '-330.png', 'theme', true, version) }} 330w,
                             {{ asset('assets/media/img/' ~ site_logo ~ '-495.png', 'theme', true, version) }} 495w"
                     sizes="(max-width:639px) 132px, (min-width:640px) and (max-width:959px) 219px, (min-width:960px) and (max-width:1399px) 330px, (min-width:1400px) 330px"
